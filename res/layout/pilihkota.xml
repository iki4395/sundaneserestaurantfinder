<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgbatik"
    tools:context="com.example.sundaneserestaurantfinder.pilihkota" >

    <Button
        android:id="@+id/buttonAll"
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonall" />

    <Button
        android:id="@+id/buttonBandung"
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:layout_below="@+id/buttonAll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonbandung"/>

    <Button
        android:id="@+id/buttonSumedang"
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:layout_below="@+id/buttonBandung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonsumedang"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="150dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonSumedang"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonback" />
    
    </RelativeLayout>
